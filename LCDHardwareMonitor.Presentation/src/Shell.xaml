<mui:ModernWindow x:Class="LCDHardwareMonitor.Presentation.Views.Shell"
	xmlns    ="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x  ="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mui="http://firstfloorsoftware.com/ModernUI"
	ResizeMode="CanMinimize"
	Title="LCD Hardware Monitor" MinHeight="650" MinWidth="1100"
	KeyDown="ModernWindow_KeyDown"
	MouseRightButtonDown="MainWindow_MouseRightButtonDown"
	ContentSource="src/Views/Designer/LCDDesignerPage.xaml">

	<mui:ModernWindow.TitleLinks>
		<mui:Link DisplayName="Settings" Source="src/Views/Settings/SettingsPage.xaml" />
		<mui:Link DisplayName="Source" Source="https://github.com/Sycobob/LCDHardwareMonitor" />
	</mui:ModernWindow.TitleLinks>

	<mui:ModernWindow.MenuLinkGroups>

		<mui:LinkGroup DisplayName="LCD Designer">
			<mui:LinkGroup.Links>
				<mui:Link Source="src/Views/Designer/LCDDesignerPage.xaml" />
			</mui:LinkGroup.Links>
		</mui:LinkGroup>

		<mui:LinkGroup DisplayName="Sources" x:Name="SourcesLinkGroup">
			<mui:LinkGroup.Links>
				<mui:Link DisplayName="OHM" Source="src/Views/Sources/OHMSourceView.xaml" />
			</mui:LinkGroup.Links>
		</mui:LinkGroup>
	</mui:ModernWindow.MenuLinkGroups>

</mui:ModernWindow>