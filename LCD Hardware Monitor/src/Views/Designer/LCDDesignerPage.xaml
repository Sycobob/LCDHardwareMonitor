<UserControl x:Class="LCDHardwareMonitor.Views.LCDDesignerPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:views="clr-namespace:LCDHardwareMonitor.Views"
	xmlns:muicontrols="clr-namespace:FirstFloor.ModernUI.Windows.Controls;assembly=FirstFloor.ModernUI"
	DataContext="{Binding RelativeSource={RelativeSource Self}}"
	mc:Ignorable="d"
	d:DesignHeight="650" d:DesignWidth="1100">

	<Grid>
		<!--Margin="{StaticResource RootMargin}">-->
		<!--Margin="10,0,10,10">-->
		<Grid.ColumnDefinitions>
			<ColumnDefinition MinWidth="320"/>
			<ColumnDefinition Width="10"/>
			<ColumnDefinition MinWidth="320"/>
		</Grid.ColumnDefinitions>

		<!-- Left Side, LCD Preview -->
		<views:LCDPreview Grid.Column="0" />

		<!-- Right Side - Drwables/Sensors Lists -->
		<muicontrols:ModernFrame x:Name="LCDDesignerRightFrame"
			Grid.Column="2"
			Source="src/Views/Designer/DrawablesView.xaml"/>
	</Grid>
</UserControl>