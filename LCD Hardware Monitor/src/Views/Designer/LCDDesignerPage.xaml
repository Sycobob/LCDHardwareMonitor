<UserControl x:Class="LCDHardwareMonitor.Views.LCDDesignerPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:views="clr-namespace:LCDHardwareMonitor.Views"
	mc:Ignorable="d"
	d:DesignHeight="650" d:DesignWidth="1100">

	<Grid>
		<!--Margin="{StaticResource RootMargin}">-->
		<!--Margin="10,0,10,10">-->
		<Grid.ColumnDefinitions>
			<ColumnDefinition MinWidth="320"/>
			<ColumnDefinition Width="10"/>
			<ColumnDefinition MinWidth="320"/>
		</Grid.ColumnDefinitions>

		<!-- Left Side, LCD Preview -->
		<views:LCDPreview Grid.Column="0" />

		<!-- Right Side - Elements Section -->
		<Grid Grid.Column="2">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition />
			</Grid.RowDefinitions>

			<!-- Title -->
			<TextBlock
				Style="{StaticResource Title}"
				Margin="0,0,0,10"
				Text="Elements" />

			<!-- TODO: When an item on the screen is selected, this animates away and a list of sensors takes it's place -->
			<!-- Elements -->
			<views:DrawablesList
				Grid.Row="1"
				BorderBrush="{DynamicResource ButtonBorder}"
				BorderThickness="1" />
		</Grid>
	</Grid>
	
</UserControl>