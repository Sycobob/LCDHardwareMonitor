<UserControl x:Class="LCDHardwareMonitor.Views.DrawablesView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:lhm="clr-namespace:LCDHardwareMonitor"
	mc:Ignorable="d" 
	d:DesignHeight="300" d:DesignWidth="300">

	<DockPanel>

		<!-- Title -->
		<TextBlock
			DockPanel.Dock="Top"
			Style="{StaticResource Title}"
			Margin="0,0,0,10"
			Text="Widgets" />

		<!-- Drawables List -->
		<ListView
			DataContext="{x:Static Application.Current}"
			ItemsSource="{Binding Drawables}"
			BorderBrush="{DynamicResource ButtonBorder}"
			BorderThickness="1">

			<ListView.Resources>
				<!-- Enable drag & drop on drawables -->
				<Style
					TargetType="ListViewItem"
					BasedOn="{StaticResource {x:Type ListViewItem}}">
					<EventSetter
						Event="PreviewMouseLeftButtonDown"
						Handler="Drawable_PreviewMouseLeftButtonDown" />
					<EventSetter
						Event="PreviewMouseLeftButtonUp"
						Handler="Drawable_PreviewMouseLeftButtonUp" />
					<EventSetter
						Event="MouseMove"
						Handler="Drawable_MouseMove" />
				</Style>
			</ListView.Resources>

			<ListView.ItemTemplate>
				<DataTemplate>
					<TextBlock
						Text="{Binding Name}" />
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</DockPanel>
</UserControl>